{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/cobalt2.omp.json",
  "console_title_template": "{{.Shell}} in {{.PWD}}",
  "transient_prompt": {
        "background": "transparent",
        "foreground": "#007ACC",
        "template": "{{ .Shell }}-> "
    },
  "tooltips": [
    {
      "type": "git",
      "tips": [
        "git",
        "g"
      ],
      "style": "diamond",
      "foreground": "#193549",
      "background": "#fffb38",
      "leading_diamond": "",
      "trailing_diamond": "",
      "template": "{{ .HEAD }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}",
      "properties": {
        "fetch_status": true,
        "fetch_upstream_icon": true
      }
    }
  ],
  "blocks": [
    {
      "segments": [
        {
          "foreground": "#007ACC",
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "03:04:05 PM"
          },
          "style": "plain",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#61AFEF",
          "foreground": "#ffffff",
          "leading_diamond": "",
          "template": " {{ .UserName }} ",
          "style": "diamond",
          "trailing_diamond": "",
          "type": "session"
        },
        {
          "background": "#61AFEF",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "template": " {{ .Path }} ",
          "properties": {
            "exclude_folders": [
              "/super/secret/project"
            ],
            "style": "folder"
          },
          "style": "powerline",
          "type": "path"
        },
        {
          "background": "#2e9599",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#f36943{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#a8216b{{ end }}",
            "{{ if gt .Ahead 0 }}#35b5ff{{ end }}",
            "{{ if gt .Behind 0 }}#f89cfa{{ end }}"
          ],
          "foreground": "#193549",
          "background_templates": [
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ffffff{{ end }}"
          ],
          "powerline_symbol": "",
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_status": true
          },
          "style": "powerline",
          "type": "git"
        },
        {
          "background": "#00897b",
          "background_templates": [
            "{{ if gt .Code 0 }}#e91e63{{ end }}"
          ],
          "foreground": "#ffffff",
          "template": "<parentBackground></>  ",
          "properties": {
            "always_enabled": false
          },
          "style": "diamond",
          "trailing_diamond": "",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
